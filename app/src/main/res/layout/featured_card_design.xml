<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/featured_img1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/station_view1"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/featured_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="Fortum ev Station"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="3.5"
            android:progressTint="#FFCC01"
            style="@style/Widget.AppCompat.RatingBar.Small"/>
        <TextView
            android:id="@+id/featured_discription1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="Immamguda, Rangareddy SH-5, Hyderabad"
            />
        <TextView
            android:id="@+id/featured_watts1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:layout_marginTop="3dp"
            android:text="Connector:25KW"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>